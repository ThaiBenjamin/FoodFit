<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/homeAppText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Food Fit"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sloganText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:text="&quot; Nourish your body, elevate your life.&quot;"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.603"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:text="By: Shawn Gazin and Benjamin Thai"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeAppText" />

    <ImageButton
        android:id="@+id/recipesButton"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="56dp"
        android:background="#792D84E3"
        android:onClick="recipesEventRunner"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_goal_launcher_foreground"
        tools:srcCompat="@drawable/ic_goal_launcher_foreground" />

    <ImageButton
        android:id="@+id/resourceButton"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="52dp"
        android:background="#792D84E3"
        android:onClick="additionalResourcesEventRunner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_goal_launcher_foreground"
        tools:srcCompat="@drawable/ic_goal_launcher_foreground" />

    <TextView
        android:id="@+id/additionalResourcesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:text="Additional Resources"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/goalsText2"
        app:layout_constraintTop_toBottomOf="@+id/resourceButton"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/recipesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:text="Recipes"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/benefitsText"
        app:layout_constraintTop_toBottomOf="@+id/recipesButton"
        app:layout_constraintVertical_bias="0.277" />

    <ImageButton
        android:id="@+id/goalButton"
        android:layout_width="111dp"
        android:layout_height="118dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="76dp"
        android:background="#792D84E3"
        android:onClick="goalEventRunner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resourceButton"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_goal_launcher_foreground"
        tools:srcCompat="@drawable/ic_goal_launcher_foreground" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="252dp"
        android:background="#792D84E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_goal_launcher_foreground"
        tools:srcCompat="@drawable/ic_goal_launcher_foreground" />

    <ImageButton
        android:id="@+id/benfitInfoButton"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="52dp"
        android:background="#792D84E3"
        android:onClick="benefitsEventRunner"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintEnd_toStartOf="@+id/recipesButton"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.983"
        app:srcCompat="@drawable/ic_goal_launcher_foreground"
        tools:srcCompat="@drawable/ic_goal_launcher_foreground" />

    <TextView
        android:id="@+id/benefitsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="Benefits "
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/benfitInfoButton"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="PlaceHolder"
        app:layout_constraintBottom_toTopOf="@+id/goalButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/goalsText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="Set Your Goals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalButton"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="8dp"
        android:text="PlaceHolder"
        app:layout_constraintBottom_toTopOf="@+id/resourceButton"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageButton3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="108dp"
        android:layout_height="119dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="60dp"
        android:background="#792D84E3"
        app:layout_constraintBottom_toTopOf="@+id/goalButton"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_goal_launcher_foreground"
        tools:srcCompat="@drawable/ic_goal_launcher_foreground" />

    <Button
        android:id="@+id/button2"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:onClick="creditsEventRunner"
        android:text="Credits"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>